<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/background_material_light"

    >




            <ViewFlipper
                android:id="@+id/viewFlipper1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inAnimation="@anim/push_right_in"
                android:layout_margin="0dp"
                >


                <LinearLayout
                    android:id="@+id/flipView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="?colorPrimary"

                    >

                    <ImageButton
                        android:id="@+id/languageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/menu_locale"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:padding="0dp"
                        android:layout_gravity="right|top"
                        android:src="@drawable/ic_language_white_36dp" />



                    <ImageView
                        android:layout_width="256dp"
                        android:layout_height="256dp"
                        android:src="@drawable/whitelogo"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_gravity="bottom"
                        android:gravity="center_horizontal|bottom"
                        android:orientation="vertical"

                        >

                        <Button
                            android:id="@+id/btnShowRegister"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/create_an_account"
                            android:layout_margin="0dp"
                            android:layout_gravity="bottom"
                            android:background="?android:attr/selectableItemBackground"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:padding="16dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"

                            />

                        <Button
                            android:id="@+id/btnShowLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/sign_in_message"
                            android:layout_margin="0dp"
                            android:layout_gravity="bottom"
                            android:background="?android:attr/selectableItemBackground"
                            android:textColor="@android:color/white"
                            />

                    </LinearLayout>

                </LinearLayout>
                <FrameLayout
                    android:id="@+id/flipView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:background="@color/primary_material_light"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:text="@string/create_id"
                            android:textSize="18dp"
                            android:textColor="@android:color/black"
                            />
                        <EditText android:id="@+id/edtNewName"
                            android:selectAllOnFocus="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            android:autoLink="none"
                            android:cursorVisible="true"
                            android:inputType="textEmailAddress"
                            android:layout_margin="10dp"
                            android:textSize="24dp"
                            android:padding="6dp"
                            android:background="@drawable/rounded_rect"
                            />


                        <ProgressBar
                            android:id="@+id/progressNewUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:visibility="gone"
                            />
                        <ImageView
                            android:id="@+id/progressImage"
                            android:layout_width="256dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/olo_welcome"
                            android:visibility="gone"
                            />

                        <TextView
                            android:id="@+id/statusNewUser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text=""
                            android:textSize="18dp"
                            android:visibility="gone"
                            />

                        <!--
                        <EditText
                            android:id="@+id/statusAccountInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text=""
                            android:textSize="18dp"
                            android:visibility="gone"
                            android:background="#ffffff"
                            android:padding="3dp"
                            android:selectAllOnFocus="true"
                            />-->

                        <Button android:id="@+id/btnRegister"
                            android:text="@string/btn_next"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dip"
                            android:layout_width="match_parent"
                            android:layout_gravity="bottom"
                            android:visibility="gone"
                            android:textColor="@android:color/white"
                            android:background="?colorPrimary"
                            />
                    </LinearLayout>


                    <Button android:id="@+id/btnAdvanced"
                        android:text="@string/advanced"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:layout_width="match_parent"
                        android:layout_gravity="bottom|center"

                        android:background="@android:color/transparent"
                        android:textColor="?colorPrimary"
                        />


                </FrameLayout>
                <LinearLayout
                    android:id="@+id/flipView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:gravity="center_horizontal|top"
                    android:orientation="vertical"
                    android:background="@color/primary_material_light"
                    >


                    <ImageView
                        android:layout_width="256dp"
                        android:layout_height="256dp"
                        android:src="@drawable/olo_dancing"
                        android:layout_margin="0dp"
                        />

                    <TextView
                        android:id="@+id/statusInviteFriends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="____________________"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        />

                    <LinearLayout
                        android:id="@+id/inviteOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:gravity="center_horizontal|top"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/btnInviteSMS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textSize="10dp"
                            android:text="Invite SMS"
                            android:drawableLeft="@android:drawable/ic_menu_send"
                            android:textColor="@android:color/white"
                            android:background="?colorPrimary"

                            />   <Button
                        android:id="@+id/btnInviteShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textSize="10dp"
                        android:text="Invite Share"
                        android:drawableLeft="@android:drawable/ic_menu_share"
                        android:textColor="@android:color/white"
                        android:background="?colorPrimary"

                        />
                        <Button
                            android:id="@+id/btnInviteScan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textSize="10dp"
                            android:text="Scan QR"
                            android:drawableLeft="@android:drawable/ic_menu_camera"
                            android:textColor="@android:color/white"
                            android:background="?colorPrimary"

                            />

                    </LinearLayout>
                    <Button
                        android:id="@+id/btnInviteSkip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lock_screen_skip"
                        android:layout_marginTop="40dp"
                        android:textSize="14dp"
                        android:background="?colorPrimary"
                        android:textColor="@android:color/white"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/flip_view_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:paddingTop="40dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="You can use Zom with an existing XMPP/Jabber account on any server you would like."
                        android:textSize="18dp"
                        android:textColor="@android:color/black"
                        />

                    <EditText android:id="@+id/edtName"
                        android:selectAllOnFocus="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/account_setup_example_email_address"
                        android:autoLink="none"
                        android:cursorVisible="true"
                        android:inputType="textEmailAddress"
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="@drawable/rounded_rect"
                        android:layout_margin="3dp"
                        />

                    <EditText android:id="@+id/edtPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/account_setup_password"
                        android:selectAllOnFocus="true" android:inputType="textPassword"

                        android:padding="6dp"
                        android:gravity="center"
                        android:background="@drawable/rounded_rect"
                        android:layout_margin="3dp"
                        />




                    <Button android:id="@+id/btnSignIn"
                        android:text="@string/sign_in"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:layout_width="match_parent"
                        android:layout_gravity="bottom"
                        android:background="?colorPrimary"
                        android:textColor="@android:color/white"
                        />

                    <ProgressBar
                        android:id="@+id/progressExistingUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/progressExistingImage"
                        android:layout_width="256dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/olo_welcome"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/flip_view_advanced"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:paddingTop="40dp"
                    >


                    <EditText android:id="@+id/edtNameAdvanced"
                        android:selectAllOnFocus="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/create_id"
                        android:autoLink="none"
                        android:cursorVisible="true"
                        android:inputType="textEmailAddress"
                        android:gravity="center"
                        android:padding="6dp"
                        android:background="@drawable/rounded_rect"
                        android:layout_margin="3dp"
                        />

                    <org.awesomeapp.messenger.ui.widgets.InstantAutoCompleteTextView
                        android:id="@+id/spinnerDomains"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="true"
                        android:hint="@string/select_domain_new_account"
                        android:completionThreshold="1"
                        android:gravity="center"
                        android:background="@drawable/rounded_rect"
                        android:layout_margin="3dp"
                        android:padding="6dp"

                        />

                    <EditText android:id="@+id/edtNewPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/account_setup_password"
                        android:selectAllOnFocus="true" android:inputType="textPassword"
                        android:padding="6dp"
                        android:gravity="center"
                        android:background="@drawable/rounded_rect"
                        android:layout_margin="3dp"
                        />

                    <EditText android:id="@+id/edtNewPassConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/account_setup_password_confirm"
                        android:selectAllOnFocus="true"
                        android:inputType="textPassword"
                        android:gravity="center"
                        android:background="@drawable/rounded_rect"
                        android:layout_margin="3dp"
                        android:padding="6dp"

                        />


                    <Button android:id="@+id/btnNewRegister"
                        android:text="@string/btn_create_new_account"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dip"
                        android:layout_width="match_parent"
                        android:layout_gravity="bottom"
                        android:background="?colorPrimary"
                        android:textColor="@android:color/white"
                        />

                </LinearLayout>





            </ViewFlipper>

            

</LinearLayout>
